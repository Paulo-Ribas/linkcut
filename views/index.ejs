    <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "WebPage",
            "name": "Encurtador de URL Gratuito",
            "description": "Encurte e personalize URLs longos com o LinkCut. Fácil, rápido e gratuito!",
            "url": "https://linkcut.fun",
            "publisher": {
              "@type": "Organization",
              "name": "LinkCut",
              "logo": "https://linkcut.fun"
            },
            "mainEntity": {
              "@type": "SoftwareApplication",
              "name": "LinkCut",
              "description": "Encurte e personalize URLs longos com o LinkCut. Fácil, rápido e gratuito!",
              "applicationCategory": "Web Tools",
